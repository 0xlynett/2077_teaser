		.info {
			display: grid;
			margin-block-end: 0 !important;
			span {
				font-weight: 900;
				text-transform: capitalize
			}
			a {
			padding: .2rem;
			font-weight: 800;
			background-color: rgb(234, 234, 234);
			border-radius: .2rem;
			border: 1px solid var(--color-primary);
			text-decoration: none;
			font-family: monospace;
		}
		}
		.icon {
			display: flex;
			column-gap: 0.4rem;
			margin-block-start: 0 !important;


		}

	}
